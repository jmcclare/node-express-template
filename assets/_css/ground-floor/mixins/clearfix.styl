// NOTE: Nib already provides a clearfix mixin, albeit without mobile support.

//@mixin clearfix() { *zoom:1;
//  &:before, &:after { content: " "; display: table; }
//  &:after { clear: both; }
//}

mobileClearfix()
  .somenonexistantclass
    unquote('@media only screen and (max-width: ' + ($screenSmall - 1) + ') {')
  &:before, &:after { content: " "; display: table; }
  &:after { clear: both; }
  &:last-child { float: none; }
  .somenonexistantclass
    \}
